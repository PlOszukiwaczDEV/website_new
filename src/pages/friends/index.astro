---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import SmallArrowCard from "@components/SmallArrowCard.astro";
import { FRIENDS } from "@consts";
---

<PageLayout title={FRIENDS.TITLE} description={FRIENDS.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white mb-8">
      Here is a list of my friends in a random order.
    </h4>
    <div class="space-y-16">
      <section>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {FRIENDS.list?.map((friend) => (
            <SmallArrowCard
              href={friend.url}
              class="p-6 hover:scale-105 transition-all duration-300 animate"
            >
              <div class="flex flex-col gap-2">
                <h3 class="text-lg font-medium">{friend.name}</h3>
              </div>
            </SmallArrowCard>
          ))}
        </div>
      </section>     
    </div>
  </Container>
</PageLayout>